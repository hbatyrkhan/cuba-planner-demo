<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="speakersTable"
        messagesPack="com.company.planner2.web.screens.speaker">
    <data readOnly="true">
        <collection id="speakersDc"
                    class="com.company.planner2.entity.Speaker"
                    view="_local">
            <loader id="speakersDl">
                <query>
                    <![CDATA[select e from planner2_Speaker e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="speakersTable"
            spacing="true">
        <filter id="filter"
                applyTo="speakersTable"
                dataLoader="speakersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="speakersTable"
                    width="100%"
                    dataContainer="speakersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="email"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="speakersTable.create"/>
                <button id="editBtn" action="speakersTable.edit"/>
                <button id="removeBtn" action="speakersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
